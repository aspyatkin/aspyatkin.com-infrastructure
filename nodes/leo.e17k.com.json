{
  "environment": "production",
  "run_list": [
    "recipe[locale::default]",
    "recipe[build-essential::default]",
    "recipe[ufw::default]",
    "recipe[ntp::default]",
    "recipe[latest-git::default]",
    "recipe[dotfiles::default]"
  ],
  "automatic": {
    "fqdn": "leo.e17k.com"
  },
  "build-essential": {
    "compile_time": true
  },
  "firewall": {
    "ufw": {
      "defaults": {
        "ipv6": "yes",
        "manage_builtins": "no",
        "ipt_sysctl": "/etc/ufw/sysctl.conf",
        "ipt_modules": "nf_conntrack_ftp nf_nat_ftp nf_conntrack_netbios_ns",
        "policy": {
          "input": "DROP",
          "output": "ACCEPT",
          "forward": "ACCEPT",
          "application": "SKIP"
        }
      }
    },
    "rules": [
      {
        "openvpn": {
          "port": 1194,
          "protocol": "tcp",
          "source": "0.0.0.0/0"
        }
      }
    ]
  }
}
