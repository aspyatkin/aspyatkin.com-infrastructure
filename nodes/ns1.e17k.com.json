{
  "environment": "production",
  "run_list": [
    "recipe[locale::default]",
    "recipe[build-essential::default]",
    "recipe[ufw::default]",
    "recipe[ntp::default]",
    "recipe[poise-python::default]",
    "recipe[latest-git::default]",
    "recipe[dotfiles::default]",
    "recipe[nsd::master]"
  ],
  "automatic": {
    "fqdn": "ns1.e17k.com"
  },
  "firewall": {
    "ufw": {
      "defaults": {
        "ipv6": "no",
        "manage_builtins": "no",
        "ipt_sysctl": "/etc/ufw/sysctl.conf",
        "ipt_modules": "nf_conntrack_ftp nf_nat_ftp nf_conntrack_netbios_ns",
        "policy": {
          "input": "DROP",
          "output": "ACCEPT",
          "forward": "DROP",
          "application": "SKIP"
        }
      }
    },
    "rules": [
      {
        "ns_tcp": {
          "port": 53,
          "protocol": "tcp",
          "source": "0.0.0.0/0"
        }
      },
      {
        "ns_udp": {
          "port": 53,
          "protocol": "udp",
          "source": "0.0.0.0/0"
        }
      }
    ]
  }
}
