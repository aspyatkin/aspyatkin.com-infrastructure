server {
    listen [::]:80;
    listen 80;

    server_name <%= node.app.domain %> www.<%= node.app.domain %>;

    location /.well-known/acme-challenge {
        default_type text/plain;
        root /var/www/letsencrypt;
    }
    location / {
        return 301 https://<%= node.app.domain %>$request_uri;
    }
}

server {
    listen [::]:443 ssl http2;
    listen 443 ssl http2;

    server_name www.<%= node.app.domain %>;

    ssl_certificate /var/ssl/<%= node.app.domain %>.crt;
    ssl_certificate_key /var/ssl/<%= node.app.domain %>.key;

    add_header Strict-Transport-Security "max-age=63072000";
    add_header X-Frame-Options "DENY";

    keepalive_timeout 300;
    return 301 https://<%= node.app.domain %>$request_uri;
}

server {
    listen [::]:443 ssl http2 deferred;
    listen 443 ssl http2 deferred;

    server_name <%= node.app.domain %>;

    ssl_certificate /var/ssl/<%= node.app.domain %>.crt;
    ssl_certificate_key /var/ssl/<%= node.app.domain %>.key;

    access_log /var/www/<%= node.app.domain %>/logs/nginx_access.log;
    error_log /var/www/<%= node.app.domain %>/logs/nginx_error.log;

    add_header Strict-Transport-Security "max-age=63072000";
    add_header X-Frame-Options "DENY";

    keepalive_timeout 300;
    charset utf-8;
    root /var/www/<%= node.app.domain %>/_site;
}
